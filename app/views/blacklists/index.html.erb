<h1>List of Blacklist Entries</h1>

<div id="BlacklistTools" class="tool_box">
  <br>
  <%= link_to 'New Blacklist Entry', new_blacklist_path, :class => "button" %>
 
  <br><br><br> 

  <%= image_tag "yellow_exclamation.png", id: "WarningImg", class: "hidden" %>
  <div id="NumberWarnings" class="hidden"></div>
  <br>
  <div id="ShowWarnButton" class="button hidden">Show Conflicts</div>
  <div id="ReshowBlacklists" class="button hidden">Show All</div>
  <br>
  <div id="ResolveButton" class="button hidden">Force Resolve(NF)</div>
</div>

<table>
  <thead>
    <tr>
      <th>User ID</th>
      <th>User name</th>
      <th>Email</th>
      <th colspan=3>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @blacklists.each do |blacklist| %>
      <% if blacklist.is_invited %>
        <tr class="warning_color">
      <% else %>
        <tr>
      <% end %>

        <td><%= blacklist.user_id %></td>
        <td><%= blacklist.user_name %></td>
        <td><%= blacklist.email %></td>
        <td><%= link_to 'Show', blacklist %></td>
        <td><%= link_to 'Edit', edit_blacklist_path(blacklist) %></td>
        <td><%= link_to 'Destroy', blacklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
